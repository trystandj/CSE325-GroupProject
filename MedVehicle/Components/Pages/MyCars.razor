@page "/MyCars"
@using MedVehicle.MongoDB
@using MedVehicle.Models
@inject CarService CarService


<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Available Vehicles</h3>
        <div>
        
        <a href="/AddVehicle" class="btn btn-primary">Add Vehicle</a>
        </div>
    </div>

    @if (cars == null)
    {
        <div class="d-flex align-items-center">
            <strong>Loading vehicle data...</strong>
            <div class="spinner-border ms-auto" role="status" aria-hidden="true"></div>
        </div>
    }
    else if (!cars.Any())
    {
        <div class="alert alert-info">No cars found in the database.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Make & Model</th>
                        <th>Year</th>
                        <th>Color</th>
                        <th>Mileage</th>
                        <th>VIN</th>
                        <th>Type</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var car in cars)
                    {
                        <tr>
                            <td><strong>@car.Make</strong> @car.Model</td>
                            <td>@car.Year</td>
                            <td>@car.Color</td>
                            <td>@car.Mileage.ToString("N0") mi</td>
                            <td>@car.Vin[..4]@(new string('*', car.Vin.Length - 4))</td>
                            <td>
                                @if (car.IsElectric)
                                {
                                    <span class="badge rounded-pill bg-success">Electric</span>
                                }
                                else
                                {
                                    <span class="badge rounded-pill bg-secondary">Gas</span>
                                }
                            </td>
                            <td class="text-muted small">@car.Description</td>
                            <td>
                                <a href="/EditVehicle/@car.PublicId" class="btn btn-sm btn-outline-primary">Edit</a>
                                <a href="/DeleteVehicle/@car.PublicId" class="btn btn-sm btn-outline-danger">Delete</a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<Car>? cars;

    protected override async Task OnInitializedAsync()
    {
        try 
        {
            cars = await CarService.GetCarsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error fetching cars: {ex.Message}");
        }
    }

}