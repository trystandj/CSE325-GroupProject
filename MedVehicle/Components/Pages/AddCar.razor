@page "/AddVehicle"
@using MedVehicle.Models
@using MedVehicle.MongoDB
@implements IDisposable
@inject CarService CarService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Add New Vehicle</h3>
        </div>
        <div class="card-body">
            <EditForm EditContext="editContext" OnValidSubmit="HandleValidSubmit">
                <DataAnnotationsValidator />

                <div class="row g-3">
                    @* Make *@
                    <div class="col-md-6">
                        <label class="form-label">Make</label>
                        <InputText @bind-Value="newCar.Make" class="form-control" placeholder="e.g. Honda" />
                        <ValidationMessage For="@(() => newCar.Make)" class="text-danger small" />
                    </div>

                    @* Model *@
                    <div class="col-md-6">
                        <label class="form-label">Model</label>
                        <InputText @bind-Value="newCar.Model" class="form-control" placeholder="e.g. Civic" />
                        <ValidationMessage For="@(() => newCar.Model)" class="text-danger small" />
                    </div>

                    @* Year *@
                    <div class="col-md-4">
                        <label class="form-label">Year</label>
                        <InputNumber @bind-Value="newCar.Year" class="form-control" />
                        <ValidationMessage For="@(() => newCar.Year)" class="text-danger small" />
                    </div>

                    @* Color *@
                    <div class="col-md-4">
                        <label class="form-label">Color</label>
                        <InputText @bind-Value="newCar.Color" class="form-control" />
                        <ValidationMessage For="@(() => newCar.Color)" class="text-danger small" />
                    </div>

                    @* Mileage *@
                    <div class="col-md-4">
                        <label class="form-label">Mileage</label>
                        <InputNumber @bind-Value="newCar.Mileage" class="form-control" />
                        <ValidationMessage For="@(() => newCar.Mileage)" class="text-danger small" />
                    </div>

                    @* VIN *@
                    <div class="col-md-8">
                        <label class="form-label">VIN</label>
                        <InputText @bind-Value="newCar.Vin" class="form-control" placeholder="17-character VIN" />
                        <ValidationMessage For="@(() => newCar.Vin)" class="text-danger small" />
                    </div>

                    @* Type *@
                    <div class="col-md-4 d-flex align-items-end">
                        <div class="form-check mb-2">
                            <InputCheckbox @bind-Value="newCar.IsElectric" class="form-check-input" id="electricCheck" />
                            <label class="form-check-label" for="electricCheck">Is Electric Vehicle?</label>
                        </div>
                    </div>

                    @* Description *@
                    <div class="col-12">
                        <label class="form-label">Description</label>
                        <InputTextArea @bind-Value="newCar.Description" class="form-control" rows="3" />
                        <ValidationMessage For="@(() => newCar.Description)" class="text-danger small" />
                    </div>

                    @* Actions *@
                    <div class="col-12 mt-4 border-top pt-3">
                        <button type="submit" class="btn btn-success px-4" disabled="@isError">
                            Save Vehicle
                        </button>
                        <button type="button" class="btn btn-outline-secondary px-4" @onclick="Cancel">
                            Cancel
                        </button>
                    </div>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private Car newCar = new();
    private EditContext? editContext;
    private bool isError = true;

     
    protected override void OnInitialized()
    {
        @* This initilizes the EditContext for form validation. Every time a field changes, the HandleFieldChanged method is called *@
        editContext = new(newCar);
        editContext.OnFieldChanged += HandleFieldChanged;
    }

    private void HandleFieldChanged(object? sender, FieldChangedEventArgs e)
    {
        @* This asks the EditContext to revalidate all fields. If there are no erros with the form we flip the isError flag. *@
        isError = !editContext!.Validate();
        @* We re-render the component to make the save button enabled/disabled based on validation status *@
        StateHasChanged();
    }

    private async Task HandleValidSubmit()
    {
        @* Only runs if the form is validated, at this point it creates a new car object to our db *@
        try 
        {
            await CarService.CreateAsync(newCar);
            Navigation.NavigateTo("/MyCars");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Database Error: {ex.Message}");
        }
    }

    private void Cancel() => Navigation.NavigateTo("/MyCars");

    public void Dispose()
    {
        if (editContext is not null)
        {
            editContext.OnFieldChanged -= HandleFieldChanged;
        }
    }
}